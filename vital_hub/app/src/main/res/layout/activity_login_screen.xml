<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".authentication.LoginScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/vital_hub_logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mont_black"
        android:text="vitalHub"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back! \n Let's start the journey"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:fontFamily="@font/mont_bold"
        android:textSize="30sp"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Login with Google"
        android:textSize="20sp"
        app:backgroundTint="@null"
        android:background="@drawable/gradient_background"
        android:fontFamily="@font/mont_semi_bold"
        android:drawableLeft="@drawable/icons8_google1"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/term"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:fontFamily="@font/mont_alt_reg"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/dev"
        android:text="\t\t\t\t\t\t\t\n\n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>