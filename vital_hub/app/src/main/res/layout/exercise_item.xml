<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ex_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@drawable/running_ex"
        app:backgroundTint="@null" />


    <TextView
        android:id="@+id/ex_list_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="5000 steps"
        android:fontFamily="@font/mont_reg"/>


    <ImageView
        android:id="@+id/ex_list_calo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@drawable/calo_ex"
        app:backgroundTint="@null" />

    <TextView
        android:id="@+id/calo_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="500 calo"
        android:fontFamily="@font/mont_reg"/>

</LinearLayout>