<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercises.ExerciseGeneralFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/mont_semi_bold"
                android:text="Choose an activity"
                android:layout_marginVertical="10dp"
                android:textSize="36sp" />

            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/choose_gym_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/color_green"
                android:text="Exercises"
                android:textSize="28dp"
                android:fontFamily="@font/mont_semi_bold"
                app:icon="@drawable/exercise_weight_lift"
                app:iconSize="40dp"
                app:iconTint="@color/color_white"
                android:textColor="@color/color_white"
                android:padding="16dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:contentDescription="Gym" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/choose_pushup_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_green"
            android:text="Push Up"
            android:textSize="28dp"
            android:fontFamily="@font/mont_semi_bold"
            app:icon="@drawable/pushup_pose"
            app:iconSize="40dp"
            app:iconTint="@color/color_white"
            android:textColor="@color/color_white"
            android:padding="16dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:contentDescription="Push Up" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/choose_run_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_green"
            android:text="Running"
            android:textSize="28dp"
            android:fontFamily="@font/mont_semi_bold"
            app:icon="@drawable/baseline_directions_run_24"
            app:iconSize="40dp"
            app:iconTint="@color/color_white"
            android:textColor="@color/color_white"
            android:padding="16dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:contentDescription="Running" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/choose_bicycle_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_green"
            android:text="Bicycling"
            android:textSize="28dp"
            android:fontFamily="@font/mont_semi_bold"
            app:icon="@drawable/baseline_directions_bike_24"
            app:iconSize="40dp"
            app:iconTint="@color/color_white"
            android:textColor="@color/color_white"
            android:padding="16dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:contentDescription="Bicycling" />
    </LinearLayout>

</FrameLayout>