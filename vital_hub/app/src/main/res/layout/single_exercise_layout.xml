<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_20_white"
    android:padding="16dp"
    android:elevation="1dp"
    android:layout_marginVertical="16dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
    >
        <TextView
            android:id="@+id/se_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/custom_green"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
        >
            <TextView
                android:id="@+id/se_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 calories"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_bolt_24"
                android:gravity="center"
            />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/se_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wide Grip Lat Pull Downs"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:paddingVertical="4dp"
    />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:src="@drawable/single_exercise"
        android:contentDescription="exercise"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
            <TextView
                android:id="@+id/se_reps_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 sets - 10 reps per"
                android:textSize="16sp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >
            <Button
                android:id="@+id/se_btn_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:textSize="18sp"
                android:drawableEnd="@drawable/info_white_icon"
                android:background="@drawable/rounded_button_green"
                app:backgroundTint="@null"
                android:paddingVertical="0dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>