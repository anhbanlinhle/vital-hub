<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".competition.EditCompetitionActivity"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:background="@color/white"
>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="16dp"
            android:fontFamily="@font/mont_semi_bold"
            android:text="Competition"
            android:textSize="20sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/compe_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:hint="Title"
        android:textSize="20sp"
        android:drawableStart="@drawable/baseline_title_24_green"
        android:drawablePadding="10dp"
    />

    <EditText
        android:id="@+id/compe_edit_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:hint="Start at"
        android:textSize="20sp"
        android:drawableStart="@drawable/baseline_access_time_24_green"
        android:drawablePadding="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <EditText
        android:id="@+id/compe_edit_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:hint="Start at"
        android:textSize="20sp"
        android:drawableStart="@drawable/baseline_calendar_today_24"
        android:drawablePadding="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <EditText
        android:id="@+id/compe_edit_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:hint="End at"
        android:textSize="20sp"
        android:drawableStart="@drawable/baseline_calendar_today_24"
        android:drawablePadding="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
    />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:backgroundTint="@null"
        android:background="@drawable/full_rounded_corner_green_bg"
        android:paddingVertical="8dp"
        android:text="Save"
        android:textSize="24sp"
    />
</LinearLayout>